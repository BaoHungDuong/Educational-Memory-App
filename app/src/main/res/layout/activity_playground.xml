                android:layout_height="100dp"
                android:layout_weight="2"
                android:src="@drawable/ic_launcher_foreground" />
        </TableRow>

        <TableRow
            android:layout_weight="2"
            android:weightSum="8">

            <ImageView
                android:id="@+id/img5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:src="@drawable/ic_launcher_foreground" />

